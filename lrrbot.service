[Unit]
Description=LoadingReadyLive chatbot

[Service]
Type=notify
KillSignal=SIGINT
TimeoutStartSec=15s
WatchdogSec=120s
Restart=always
NotifyAccess=main
WorkingDirectory=%h/lrrbot
ExecStartPre=/usr/bin/env alembic -c %h/lrrbot/lrrbot.conf upgrade head
ExecStart=/usr/bin/env python3 %h/lrrbot/start_bot.py

[Install]
WantedBy=default.target
